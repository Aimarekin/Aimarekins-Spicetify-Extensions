{
  "compilerOptions": {
    "target": "ES2017",
    "jsx": "react",
    "jsxFactory": "createElement",
    "jsxFragmentFactory": "createFragment",
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.*"
  ]
}